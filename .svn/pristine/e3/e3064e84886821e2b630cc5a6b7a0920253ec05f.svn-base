public class AdminServlet extends HttpServlet {

	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;
	/**
	 * service
	 * 处理后台管理员的有关请求
	 */
	protected void service(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {
		//获得后台的请求内容
		String command = request.getParameter("command");
		if("adminLogin".equals(command)){
			adminLogin(request,response);
		}
	}
	/**
	 * 根据登录信息的查询返回结果转到不同的页面
	 * @param request
	 * @param response
	 */
	private void adminLogin(HttpServletRequest request,
			HttpServletResponse response) {
		//获得提交上来的管理员账户和密码
		String adminAccount = request.getParameter("adminaccount");
		String adminPassword = request.getParameter("adminpassword");
		//将值admin对象
		Admin admin= new Admin();
		admin.setAdminAccount(adminAccount);
		admin.setAdminPassword(adminPassword);
		//查询数据库
		AdminDaoImpl adminDao = new AdminDaoImpl();
		Admin loginAdmin = adminDao.getAdmin(admin);
		
		if(loginAdmin == null){
				request.setAttribute("info", "账户或密码错误！");
				try {
					request.getRequestDispatcher("/manageview/backLogin.jsp").forward(request, response);
				} catch (ServletException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				} catch (IOException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
			}else{
					//否则将信息保存到session对象中再     跳转到后台主界面;	
					HttpSession session =  request.getSession();
					session.setAttribute("loginAdmin", loginAdmin);
					//请求重定向，session的值可以传过去，JSP中可直接拿值
					try {
						response.sendRedirect(request.getContextPath()+"/manageview/mainbackstate.jsp");
					} catch (IOException e) {
						// TODO Auto-generated catch block
						e.printStackTrace();
					}
			}
	}
	
}
